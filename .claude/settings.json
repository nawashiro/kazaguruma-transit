{
    "permissions": {
        "allow": [
            "Bash(npm run lint)",
            "Bash(npm run test:*)",
            "Read(~/.zshrc)",
            "List(*)",
            "Fetch(https://*)"
        ],
        "deny": [
            "Bash(curl:*)",
            "Read(./.env)",
            "Read(./.env.*)",
            "Read(./secrets/**)"
        ],
        "defaultMode": [
            "acceptEdits"
        ]
    },
    "env": {
        "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
        "OTEL_METRICS_EXPORTER": "otlp"
    }
}